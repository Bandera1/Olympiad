<Metro:MetroWindow x:Class="OlympiadProject.Windows.SecretWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:OlympiadProject.Windows"
        mc:Ignorable="d"
        Title="SecretWindow" ResizeMode="NoResize" Height="150" Width="350">
    <StackPanel>
        <TextBlock Text="Why are you here" HorizontalAlignment="Center" FontSize="20" Margin="5"/>
        <PasswordBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="150"/>
        <Button Margin="10" Width="250" Height="30" VerticalContentAlignment="Center" Content="Enter" FontSize="18"/>
    </StackPanel>
</Metro:MetroWindow>
